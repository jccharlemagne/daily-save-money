    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["**/src/**/*"],
}
